{% extends 'admin/base.html.twig' %}

{% block title %}Modifier la catégorie{% endblock %}

{% block body %}
<div id="page-container" class="sidebar-o sidebar-dark enable-page-overlay side-scroll page-header-fixed main-content-narrow page-header-dark">
    {% include "admin/partials/sidebar.html.twig" %}
    {% include "admin/partials/header.html.twig" %}
    {# {% include "admin/partials/options.html.twig" %}  #}

      <!-- Main Container -->
      <main id="main-container">

        <!-- Hero -->
        <div class="bg-image" style="background-image: url('{{ asset('build/images/photos/photo13@2x.jpg') }}');">
          <div class="bg-black-50">
            <div class="content content-full">
              <div class="d-flex justify-content-between align-items-center">
                <h1 class="fs-2 text-white my-2">
                  <i class="fa fa-pencil-alt text-white-50 me-1"></i> Modifier la catégorie
                </h1>
                <div>
                  <a class="btn btn-primary my-2 text-light" href="{{ path('admin_category_all') }}">
                      <i class="fa fa-fw fa-list"></i>
                      <span class="d-none d-sm-inline ms-1">Liste</span>
                  </a>
                  <a class="btn btn-primary my-2 text-light" href="{{ app.request.headers.get('referer') }}">
                    <i class="fa fa-fw fa-undo"></i>
                    <spane class="d-none d-sm-inline ms-1">Retour</spane>
                  </a>
                </div>
              </div>  
            </div>
          </div>
        </div>
        <!-- END Hero -->

        <!-- Page Content -->
        <div class="content">
          <div class="block block-rounded block-bordered">
            <div class="block-content">
              {{ form_start(form, {attr: {'novalidate': 'novalidate'} }) }}
                <!-- Vital Info -->
                <h2 class="content-heading pt-0">Information catégorie</h2>
                <div class="row push">
                  <div class="col-lg-4">
                    <p class="text-muted">
                      Entrez les informations de base de la catégorie
                    </p>
                    {{form_errors(form.name)}}
                    {{form_errors(form.color)}}
                  </div>
                  
                  <div class="col-lg-8 col-xl-5">
                    <div class="mb-4">
                      {{form_widget(form.name)}}
                    </div>
                    <div class="mb-4">
                        <div class="col-md-7">
                            <div class="js-colorpicker input-group" data-format="hex">
                            {{form_widget(form.color)}}
                            <span class="input-group-text colorpicker-input-addon">
                                <i></i>
                            </span>
                            </div>
                        </div>
                    </div>
                  </div>
                </div>
                <!-- END Vital Info -->

                <!-- Submit -->
                <div class="row push">
                  <div class="col-lg-8 col-xl-5 offset-lg-4">
                    <div class="btn-group">
                      <button type="submit" class="btn btn-primary rounded text-light me-1">
                        <i class="fa fa-check-circle me-1"></i> Mettre à jour
                      </button>
                      {{ form_end(form) }}
                      <a href="{{ path('admin_category_all') }}" class="btn btn-light rounded me-1">Annuler</a>
                      {% if is_granted("ROLE_ADMIN") %}
                        {{ include('admin/category/_delete_form.html.twig') }}
                      {% endif %}
                    </div>
                  </div>
                </div>
                <!-- END Submit -->

            </div>
          </div>
        </div>
        <!-- END Page Content -->

      </main>
      <!-- END Main Container -->
    {% include "admin/partials/footer.html.twig" %}
    </div>
    <!-- END Page Container -->
{% endblock %}

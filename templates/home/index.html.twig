      <div class="row no-pad">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <div class="contact-form">
            <h3 class="contact-form-title">Ecrivez-nous</h3>

            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
              {{ form_errors(form.name, {'attr':{'class':'text-danger'}}) }}
              {{ form_errors(form.email, {'attr':{'class':'text-danger'}}) }}
              {{ form_errors(form.message, {'attr':{'class':'text-danger'}}) }}
              {{ form_errors(form.isGrpd, {'attr':{'class':'text-danger'}}) }}

            <div class="form-group">
              {{ form_widget(form.name) }}
            </div>

            <div class="form-group">
              {{ form_widget(form.email) }}
            </div>

            <div class="form-group">
              {{ form_widget(form.message) }}
            </div>

            <div class="form-group">
              {{ form_label(form.isGrpd) }}
              {{ form_widget(form.isGrpd) }}
            </div>

            <div class="form-group">
              <input type="submit" class="btn-contact" value="Envoyer"/>
            </div>

            {{ form_end(form)}}
          </div>
          <div class="col-md-3"></div>
        </div>
      </div>
    </div>
  </section>

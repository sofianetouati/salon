{% extends 'admin/base.html.twig' %}

{% block title %}Les catégories{% endblock %}

{% block body %}
<div id="page-container" class="sidebar-o sidebar-dark enable-page-overlay side-scroll page-header-fixed main-content-narrow page-header-dark">
    {% include "admin/partials/sidebar.html.twig" %}
    {% include "admin/partials/header.html.twig" %}
    {# {% include "admin/partials/options.html.twig" %}  #}

      <!-- Main Container -->
      <main id="main-container">

        <!-- Page Content -->
        <div class="content">
          <!-- Quick Overview -->
          <div class="row items-push">
          {% if is_granted("ROLE_ADMIN") %}
            <div class="col-6 col-lg-3">
              <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="{{ path('admin_category_new') }}">
                <div class="block-content py-5">
                  <div class="fs-3 fw-semibold text-success mb-1">
                    <i class="fa fa-plus"></i>
                  </div>
                  <p class="fw-semibold fs-sm text-success text-uppercase mb-0">
                    Ajouter
                  </p>
                </div>
              </a>
            </div>
          {% endif %}
            <div class="col-6 col-lg-3">
              <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="javascript:void(0)">
                <div class="block-content py-5">
                  <div class="fs-3 fw-semibold text-dark mb-1">{{ categories | length }}</div>
                  <p class="fw-semibold fs-sm text-muted text-uppercase mb-0">
                    Catégorie{% if categories|length >1 %}s{% endif %}
                  </p>
                </div>
              </a>
            </div>
          </div>
          <!-- END Quick Overview -->

          <!-- All categorys -->
          <div class="block block-rounded">
             <div class="block-header block-header-default">
              <h3 class="block-title text-center">Liste des catégories</h3>
              {#<div class="block-options">
                <div class="dropdown">
                  <button type="button" class="btn btn-alt-secondary" id="dropdown-ecom-filters" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Filters <i class="fa fa-angle-down ms-1"></i>
                  </button>
                  <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdown-ecom-filters">
                    <a class="dropdown-item d-flex align-items-center justify-content-between" href="javascript:void(0)">
                      New
                      <span class="badge bg-success rounded-pill">260</span>
                    </a>
                    <a class="dropdown-item d-flex align-items-center justify-content-between" href="javascript:void(0)">
                      Out of Stock
                      <span class="badge bg-danger rounded-pill">63</span>
                    </a>
                    <a class="dropdown-item d-flex align-items-center justify-content-between" href="javascript:void(0)">
                      All
                      <span class="badge bg-black-50 rounded-pill">36k</span>
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <div class="block-content bg-body-dark">
              <!-- Search Form -->
              <form action="be_pages_ecom_categorys.html" method="POST" onsubmit="return false;">
                <div class="mb-4">
                  <input type="text" class="form-control form-control-alt" id="dm-ecom-categorys-search" name="dm-ecom-categorys-search" placeholder="Search all categorys..">
                </div>
              </form>
              <!-- END Search Form -->#}
            </div> 
            <div class="block-content block-content-full">
              <!-- All categorys Table -->
              <div class="table-responsive">
                <table class="table fs-sm {% if is_granted("ROLE_ADMIN") %}js-dataTable-buttons{% else %}js-dataTable-full-pagination{% endif %}">
                  <thead>
                    <tr>
                      <th class="d-none d-sm-table-cell text-center" style="width: 100px;">ID</th>
                      <th class="d-sm-table-cell text-center">Catégorie</th>
                      <th class="d-sm-table-cell text-center">Couleur</th>
                      {% if is_granted("ROLE_ADMIN") %}
                      <th class="text-center">Actions</th>
                      {% endif %}
                    </tr>
                  </thead>
                  <tbody>
                  {% for category in categories %}
                      
                  
                    <tr>
                      <td class="text-center d-none d-md-table-cell fs-sm">
                        <a class="fw-semibold" href="{{ path('admin_category_edit', {id:category.id}) }}">
                          <strong>{{ category.id }}</strong>
                        </a>
                      </td>
                      <td class="text-center fs-sm">
                        <a class="fw-semibold" href="{{ path('admin_category_edit', {id:category.id}) }}">{{ category.name }}</a>
                      </td>
                      
                      
                      <td class="text-center fs-sm">
                        <span class="badge" style="background-color:{{category.color}};">{{category.color}}</span>
                      </td>
                      {% if is_granted("ROLE_ADMIN") %}
                      <td class="text-center fs-sm">
                        <a class="btn btn-sm btn-light" href="{{path('admin_category_edit', {id:category.id})}}">
                          <i class="fa fa-fw fa-eye "></i>
                        </a>
                      </td>
                      {% endif %}
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Commencez par ajouter une catégorie.</td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- END All Products Table -->

              {# <!-- Pagination -->
              <nav aria-label="Photos Search Navigation">
                <ul class="pagination justify-content-end mt-2">

{% extends 'admin/base.html.twig' %}

{% block title %}Ajouter un Coiffeur{% endblock %}
{% block body %}


    <div id="page-container" class="sidebar-o sidebar-dark enable-page-overlay side-scroll page-header-fixed main-content-narrow page-header-dark">
    {% include "admin/partials/sidebar.html.twig" %}
    {% include "admin/partials/header.html.twig" %}
    {# {% include "admin/partials/options.html.twig" %}  #}

      <!-- Main Container -->
      <main id="main-container">

        <!-- Hero -->
        <div class="bg-image" style="background-image: url('{{ asset('build/images/photos/photo13@2x.jpg') }}');">
          <div class="bg-black-50">
            <div class="content content-full">
              <div class="d-flex justify-content-between align-items-center">
                <h1 class="fs-2 text-white my-2">
                  <i class="fa fa-plus text-white-50 me-1"></i> Ajouter un coiffeur
                </h1>
                <div>
                  <a class="btn btn-primary my-2 text-light" href="{{ path('admin_coiffeur_all') }}">
                      <i class="fa fa-fw fa-list"></i>
                      <span class="d-none d-sm-inline ms-1">Liste</span>
                  </a>
                  <a class="btn btn-primary my-2 text-light" href="{{ app.request.headers.get('referer') }}">
                    <i class="fa fa-fw fa-undo"></i>
                    <spane class="d-none d-sm-inline ms-1">Retour</spane>
                  </a>
                </div>
              </div>  
            </div>
          </div>
        </div>
        <!-- END Hero -->

        <!-- Page Content -->
        <div class="content">
          <div class="block block-rounded block-bordered">
            <div class="block-content">
              {{ form_start(form, {attr: {'novalidate': 'novalidate'} }) }}
                <!-- Vital Info -->
                <h2 class="content-heading pt-0">Identification</h2>
                <div class="row push">
                  <div class="col-lg-4">
                    <p class="text-muted">
                      Entrer le nom et pr√©nom du coiffeur
                    </p>
                    {{form_errors(form.firstname)}}
                    {{form_errors(form.lastname)}}
                  </div>
                  
                  <div class="col-lg-8 col-xl-5">
                    <div class="mb-4">
                      {{form_widget(form.firstname)}}
                    </div>
                    <div class="mb-4">
                      {{form_widget(form.lastname)}}
                    </div>
                     
                  </div>
                </div>
                <!-- END Vital Info -->

                <!-- Optional Info -->
                <h2 class="content-heading pt-0">Salon</h2>
                <div class="row push">
                  <div class="col-lg-4">
                    <p class="text-muted">
                      Choisissez le salon dans lequel le coiffeur travaillera et sa couleur dans le calendrier.
                    </p>
                    {{form_errors(form.Salon)}}
                    {{form_errors(form.color)}}
                  </div>
                  <div class="col-lg-8 col-xl-5">
                    <div class="mb-4">
                      {{form_widget(form.Salon)}}
                    </div>
                    <div class="mb-4">
                        <div class="col-md-7">
                            <div class="js-colorpicker input-group" data-format="hex">
                            {{form_widget(form.color)}}
                            <span class="input-group-text colorpicker-input-addon">
                                <i></i>
                            </span>
                            </div>
                        </div>
                    </div>
                  </div>
                </div>
                <!-- END Optional Info -->

                <!-- Optional Info -->
                <h2 class="content-heading pt-0">Horaires</h2>
                <div class="row push">
                  <div class="col-lg-4">
                    <p class="text-muted">
                      Choisissez ses horaires de travail.
                    </p>
                    {{form_errors(form.jobStartAt)}}
                    {{form_errors(form.jobEndAt)}}
                  </div>
                  <div class="col-lg-8 col-xl-5">
                    <div class="mb-4">
                      {{form_widget(form.jobStartAt)}}
                    </div>
                    <div class="mb-4">
                      {{form_widget(form.jobEndAt)}}
                    </div>
                  </div>
                </div>
                <!-- END Optional Info -->

                <!-- Submit -->
                <div class="row push">
                  <div class="col-lg-8 col-xl-5 offset-lg-4">
                    <div class="mb-4">
                      <button type="submit" class="btn btn-primary text-light">
                        <i class="fa fa-check-circle me-1"></i> Enregistrer
                      </button>
                      <a href="{{ path('admin_coiffeur_all') }}" class="btn btn-light rounded m-1">Annuler</a>
                    </div>
                  </div>
                </div>
                <!-- END Submit -->
              {{ form_end(form) }}
            </div>
          </div>
        </div>
        <!-- END Page Content -->
      </main>
      <!-- END Main Container -->
      {% include "admin/partials/footer.html.twig" %}
    </div>
    <!-- END Page Container -->
{% endblock %}

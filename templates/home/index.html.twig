{% extends "base.html.twig" %}

{% block body %}

  <!-- Banner Section Starts -->  
  <section class="banner" id="accueil">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="header-banner">
            <img src="{{ asset('build/images/logo.svg') }}" alt="Logo"/>
            <p>La qualité à petit prix</p>
            <h3>À partir de {{ price }}€</h3>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="banner-info-single">
            <div class="icon-box">
              <i class="fa fa-clock-o"></i>
            </div>
            <h3>Horaires</h3>
            <p>Lundi – Samedi: 9:30 à 19:30</p>
          </div>
        </div>

        <div class="col-md-4">
          <a href="#salon">
            <div class="banner-info-single">
              <div class="icon-box">
                <i class="fa fa-map-marker"></i>
              </div>
              <h3>Localisation</h3>
              <p>Découvrez 

                {% if salons|length>1 %}nos {% else %}notre {% endif %}{% if salons|length>1 %}salons {% else %}salon{% endif %} ici</p>

            </div>
          </a>
        </div>
        <div class="col-md-4">
          <a href="{{ path('app_login') }}">
            <div class="banner-info-single">
              <div class="icon-box">
                <i class="fa fa-calendar"></i>
              </div>
              <h3>Réservations</h3>
              <p>en ligne</p>
            </div>
          </a>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="banner-info-single rdv">
            <h3 class="text-center">Avec ou sans RDV</h3>
          </div>
        </div>
      </div>
    </div>

    <div class="banner-icon">
      <i class="flaticon-hair-salon-situation"></i>
    </div>
  </section>
  <!-- Banner Section Ends -->


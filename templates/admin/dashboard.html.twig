{% extends "admin/base.html.twig" %}

{% block title %}Tableau de bord{% endblock %}


{% block body %}
<div id="page-container" class="sidebar-o sidebar-dark enable-page-overlay side-scroll page-header-fixed main-content-narrow page-header-dark">
    {% include "admin/partials/sidebar.html.twig" %}
    {% include "admin/partials/header.html.twig" %}
    {# {% include "admin/partials/options.html.twig" %} #}


      <!-- Main Container -->
      <main id="main-container">

        <!-- Page Content -->
        <div class="content">
          <!-- Quick Overview -->
          <div class="row items-push">
            <div class="col-6 col-lg-3">
              <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="{{ path('admin_customer_all') }}">
                <div class="block-content py-5">
                  <div class="fs-3 fw-semibold text-primary mb-1">{{ userRepository.findCustomers|length }}</div>
                  <p class="fw-semibold fs-sm text-muted text-uppercase mb-0">
                    Client{% if userRepository.findCustomers|length>1 %}s{% endif %}
                  </p>
                </div>
              </a>
            </div>
            <div class="col-6 col-lg-3">
              <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="{{ path('admin_calendar') }}">
                <div class="block-content py-5">
                  <div class="fs-3 fw-semibold text-success mb-1">{{ bookings | length }}</div>
                  <p class="fw-semibold fs-sm text-muted text-uppercase mb-0">
                    Rendez-vous
                  </p>
                </div>
              </a>
            </div>
            <div class="col-6 col-lg-3">
              <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="{{ path('admin_coiffeur_all') }}">
                <div class="block-content py-5">
                  <div class="fs-3 fw-semibold text-info mb-1">{{ coiffeurs | length }}</div>
                  <p class="fw-semibold fs-sm text-muted text-uppercase mb-0">
                    Coiffeur{% if coiffeurs|length > 1 %}s{% endif %}
                  </p>
                </div>
              </a>
            </div>
            {% if is_granted('ROLE_ADMIN') %}
            <div class="col-6 col-lg-3">
              <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="{{ path('admin_booking_all') }}">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-danger mb-1">{{ salons | length }}</div>
                    <p class="fw-semibold fs-sm text-muted text-uppercase mb-0">
                      Salon{% if coiffeurs|length > 1 %}s{% endif %}
                    </p>
                </div>
              </a>
            </div>
            {% endif %}
          <!-- END Quick Overview -->


          
        </div>
        <!-- END Page Content -->
      </main>      
      <!-- END Main Container -->
{% include "admin/partials/footer.html.twig" %}
</div>
{% endblock %}
      

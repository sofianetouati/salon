<form method="post" action="{{ path('admin_customer_delete', {'id': customer.id}) }}" onsubmit="return confirm('Voulez-vous vraiement supprimer ce client de votre liste?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ customer.id) }}">
    <button class="btn btn-danger"><i class="fa fa-trash-alt me-1"></i>Supprimer</button>
</form>

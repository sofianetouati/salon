<form method="post" action="{{ path('admin_product_delete', {'id': product.id}) }}" onsubmit="return confirm('Voulez-vous vraiement supprimer cette prestation de votre liste?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn btn-danger"><i class="fa fa-trash-alt me-1"></i>Supprimer</button>
</form>
